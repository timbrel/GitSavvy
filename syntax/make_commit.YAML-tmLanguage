# [PackageDev] target_format: plist, ext: tmLanguage
name: GitSavvy Make Commit
scopeName: git-savvy.make-commit
uuid: 0d4c19fb-b197-4d90-806e-7212e542c86b
hidden: true

patterns:
- comment: commit header
  name: comment.git-savvy.make-commit
  match: ^##.*
- comment: blah
  name: comment
  begin: ^#[^#]
  end: $
  patterns:
  - comment: git file categories
    name: storage
    match: '.*(Changes to be committed|Untracked files|Changes not staged for commit):'
- comment: github username
  name: constant.other.git-savvy.make-commit.github-username
  match: \@\w*
- comment: issue
  name: constant.other.git-savvy.make-commit.issue-ref
  match: (\w+/\w+)?#[0-9]+
- comment: diff section
  name: meta.git-savvy.commit-diff
  begin: ^(?=diff --git a/)
  end: ^$
  patterns:
  - include: source.diff
